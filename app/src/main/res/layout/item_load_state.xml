<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/load_state_errorMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/load_state_error_message_margin_end"
        android:layout_toStartOf="@+id/load_state_retry"
        android:text="@string/error_message"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/design_default_color_error"
        android:textSize="@dimen/load_state_error_message_text_size" />

    <ProgressBar
        android:id="@+id/load_state_progress"
        android:layout_width="@dimen/load_state_progress_size"
        android:layout_height="@dimen/load_state_progress_size"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:id="@+id/load_state_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:textColor="@color/black"
        android:backgroundTint="@color/purple_200"
        android:text="@string/button_retry" />

</RelativeLayout>